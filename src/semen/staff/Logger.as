package semen.staff {import flash.external.ExternalInterface;import flash.utils.getTimer;public class Logger {	public static function debug(message:*):void {		log(time + " DEBUG: " + message);	}	public static function info(message:*):void {		log(time + " INFO: " + message);	}	public static function warn(message:*, error:Error = null):void {		log(time + " WARN: " + message + (!error ? "" : "\n" + error.getStackTrace()));	}	public static function error(message:*, error:Error = null):void {		log(time + " ERROR: " + message + (!error ? "" : "\n" + error.getStackTrace()));	}	private static function get time():String {		return getTimer() + "";	}	private static function log(message:String):void {		trace(message);		try {			ExternalInterface.call("function(message){" +					"   if (console && console.log) {" +					"       console.log(message);" +					"   }" +					"}", message.replace(/\\/g, "\\\\")).replace(/'/g, "\\'");		} catch (e:Error) {			// No luck		}	}}}